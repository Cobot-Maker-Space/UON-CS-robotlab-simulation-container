{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "robotlab-ws-beta",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "BASE_IMAGE": "ros:humble",
            "USERNAME": "robotlab-ws-beta"
        }
    },
    "workspaceFolder": "/home/ros2_ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ros2_ws/src,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "${env:DISPLAY}",
        // "DISPLAY": "unix:0",
        "ROS_LOCALHOST_ONLY": "1",
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [
        "--net=host",
        // "-e", "DISPLAY=${env:DISPLAY}"
        "-e", "DISPLAY"
        // "--privileged"
    ],
    "mounts": [
    //    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/../cache/humble/build,target=/home/ros2_ws/build,type=bind",
        "source=${localWorkspaceFolder}/../cache/humble/install,target=/home/ros2_ws/install,type=bind",
        "source=${localWorkspaceFolder}/../cache/humble/log,target=/home/ros2_ws/log,type=bind"
    ],
    "postCreateCommand": "sudo rosdep update && sudo rosdep install --from-paths src --ignore-src -y && sudo chown -R areeb-rbt /home/ros2_ws/ && sudo apt update && sudo apt install -y net-tools ros-humble-navigation2 ros-humble-slam-toolbox ros-humble-teleop-twist-keyboard ros-humble-gazebo-* ros-humble-cartographer ros-humble-cartographer-ros python3-colcon-common-extensions"
}