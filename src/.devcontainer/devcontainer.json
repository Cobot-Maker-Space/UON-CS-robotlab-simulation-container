{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "team",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "BASE_IMAGE": "ghcr.io/sloretz/ros:humble-desktop",
            "USERNAME": "team"
        }
    },
    "workspaceFolder": "/home/ros2_ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ros2_ws/src,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    
    "containerEnv": {
    "DISPLAY": "novnc:0.0",
    "ROS_LOCALHOST_ONLY": "0",
    "ROS_DOMAIN_ID": "30",
    "RMW_IMPLEMENTATION": "rmw_fastrtps_cpp",
    "TURTLEBOT3_MODEL": "waffle_pi"
},
    "runArgs": [
    // "--net=host",
     "--network=ros",
    "--device=/dev/video0",
    "--group-add=video"
],

"forwardPorts": [8080],

    "mounts": [
        
        "source=${localWorkspaceFolder}/../cache/humble/build,target=/home/ros2_ws/build,type=bind",
        "source=${localWorkspaceFolder}/../cache/humble/install,target=/home/ros2_ws/install,type=bind",
        "source=${localWorkspaceFolder}/../cache/humble/log,target=/home/ros2_ws/log,type=bind"
    ],
    // For later uses run this command:
    "postCreateCommand": "bash /usr/local/bin/setup.sh"
    
    // For first time users and setup use this command, then you can change it to the above one after everything is cnmfigured
    // "postCreateCommand": "rm -rf build/* install/* log/* src/* && cd src/ && git clone -b humble https://github.com/ROBOTIS-GIT/DynamixelSDK.git && git clone -b humble https://github.com/ROBOTIS-GIT/turtlebot3.git && git clone -b humble https://github.com/ROBOTIS-GIT/turtlebot3_msgs.git && git clone -b humble https://github.com/ROBOTIS-GIT/turtlebot3_simulations.git && cd .. && colcon build --symlink-install"
}
